# .env.example
# This file serves as a template for your actual .env file.
# DO NOT COMMIT YOUR .ENV FILE TO VERSION CONTROL!

# PostgreSQL Database URL for Chawk
# Example for a local PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/chawk_db
# Example for AWS RDS: postgresql+asyncpg://user:password@your-aws-rds-endpoint:5432/chawk_db
DATABASE_URL="postgresql+asyncpg://chawk_user:your_secure_password@localhost:5432/chawk_db"

# JWT Secret Key - GENERATE A STRONG, RANDOM KEY!
# You can generate one using Python: import secrets; secrets.token_hex(32)
JWT_SECRET_KEY="your_super_secret_and_long_jwt_key_here_e.g._generated_by_secrets.token_hex(32)"

# CORS Origins - Specify your frontend URLs
# Example: ["http://localhost:3000", "https://your-frontend-domain.com"]
CORS_ORIGINS='["http://localhost:3000"]'